<%= form_with model: @micropost, local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, 
      accept: Settings.micropost_image_formats, 
      data: { too_large_message: t("microposts.image.too_large") } %>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>
