<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), "#" %></li>
        <li><%= link_to t(".help"), "#" %></li>
        <li><%= link_to t(".english"), locale: :en %></li>
        <li><%= link_to t(".vietnamese"), locale: :vi %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account" do %>
              <%= t(".account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t(".logout"), logout_path, data: {turbo_method: :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
