<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Micropost::GRAVATAR_SIZE), micropost.user %>

  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
  </span>

  <span class="content">
    <%= micropost.content %>
    <% if micropost.image.attached? %>
      <%= image_tag micropost.image.variant(resize_to_limit: Micropost::IMAGE_RESIZE_LIMIT).processed,
                    class: "img-fluid rounded" %>
    <% end %>
  </span>

  <span class="timestamp">
    <%= t("microposts.timestamp", time: time_ago_in_words(micropost.created_at)) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("microposts.delete"),
                  micropost,
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: t("microposts.confirm")
                  },
                  class: "delete-link text-danger" %>
    <% end %>
  </span>
</li>
